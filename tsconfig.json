{
	"compilerOptions": {
		"module": "esnext",
		"target": "es2015",
		"lib": ["es5", "es6", "es7", "dom"],
		"pretty": true,
		"strict": true,
		"resolveJsonModule": true,
		"alwaysStrict": true,
		"noImplicitReturns": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"declaration": true,
		"declarationDir": "types",
	},
	"include": [
		"./src"
	],
	"exclude": [
		"./node_modules"
	]
}
